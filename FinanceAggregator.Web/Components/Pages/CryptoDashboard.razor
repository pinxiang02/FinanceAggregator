@page "/crypto"
@using FinanceAggregator.Shared
@using ApexCharts
@using System.Globalization
@rendermode InteractiveServer
@inject FinanceApiClient Api

<PageTitle>Crypto Dashboard</PageTitle>

<div class="dashboard-wrapper">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold mb-0 text-white tracking-tight">Market<span style="color: @GetColor(selectedSymbol)">Terminal</span></h2>
            <div class="d-flex align-items-center gap-2 mt-1">
                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 pulsing-dot-container">
                    <span class="pulsing-dot"></span> Socket Connected
                </span>
            </div>
        </div>

        <div class="coin-selector">
            @foreach (var coin in CoinList)
            {
                <button class="coin-chip @(selectedSymbol == coin.Key ? "active" : "")"
                        @onclick="() => SelectCoin(coin.Key)"
                        style="--chip-color: @GetColor(coin.Key)">
                    <span class="symbol">@coin.Value</span>
                    <span class="ticker">@coin.Key.Replace("-USD", "")</span>
                </button>
            }
        </div>
    </div>

    @if (trades.Any())
    {
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="stat-card" style="border-left: 4px solid @GetColor(selectedSymbol)">
                    <div class="label text-muted text-uppercase small">Current Price</div>
                    <div class="value display-6 fw-bold text-white">@FormatCurrency(trades.Last().Price)</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="stat-card">
                    <div class="label text-muted text-uppercase small">Session High</div>
                    <div class="value fw-bold text-success">@FormatCurrency(trades.Max(t => t.Price))</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="stat-card">
                    <div class="label text-muted text-uppercase small">Session Low</div>
                    <div class="value fw-bold text-danger">@FormatCurrency(trades.Min(t => t.Price))</div>
                </div>
            </div>
        </div>
    }

    <div class="row g-4 h-100">
        <div class="col-lg-8">
            <div class="glass-panel h-100 p-3 position-relative">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="text-white mb-0 fw-light">Price Action <span class="text-muted small ms-2">1H Interval</span></h5>
                </div>

                @if (!trades.Any())
                {
                    <div class="loading-overlay">
                        <div class="spinner-border text-gold" role="status"></div>
                        <span class="mt-2 text-secondary small">Connecting to Market...</span>
                    </div>
                }

                <div style="min-height: 400px;">
                    <ApexChart TItem="Trade" Title="" Options="options" @ref="chart">
                        <ApexPointSeries TItem="Trade"
                                         Items="trades"
                                         Name="Price"
                                         SeriesType="SeriesType.Area"
                                         XValue="@(e => e.Timestamp.ToLocalTime().ToString("HH:mm:ss"))"
                                         YValue="@(e => e.Price)" />
                    </ApexChart>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="glass-panel h-100 d-flex flex-column" style="max-height: 520px;">
                <div class="p-3 border-bottom border-secondary border-opacity-25 bg-black bg-opacity-25">
                    <h5 class="text-white mb-0 fw-light">Order Book <span class="text-muted small">(Real-time)</span></h5>
                </div>

                <div class="flex-grow-1 overflow-auto custom-scrollbar p-0">
                    <table class="table table-dark table-hover table-borderless mb-0 text-center align-middle">
                        <thead class="sticky-top" style="background: #000;">
                            <tr>
                                <th class="text-secondary small text-uppercase py-2">Time</th>
                                <th class="text-secondary small text-uppercase py-2">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trade in trades.OrderByDescending(t => t.Timestamp).Take(50))
                            {
                                <tr class="trade-row">
                                    <td class="text-muted font-monospace small">
                                        @trade.Timestamp.ToLocalTime().ToString("HH:mm:ss")
                                    </td>
                                    <td class="fw-bold font-monospace" style="color: @GetColor(selectedSymbol)">
                                        @FormatCurrency(trade.Price)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 1. Global Background & Fonts */
    body {
        background-color: #09090b; /* Deep Zinc Black */
        /* Technical Grid Background */
        background-image: linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
        background-size: 40px 40px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        color: #e0e0e0;
    }

    .dashboard-wrapper {
        padding: 2rem;
    }

    /* 2. Glass Panels */
    .glass-panel {
        background: rgba(20, 20, 20, 0.6);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    }

    /* 3. Coin Chips (The Dropdown Replacement) */
    .coin-selector {
        display: flex;
        gap: 10px;
        overflow-x: auto;
        padding-bottom: 4px;
    }

    .coin-chip {
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.1);
        color: #888;
        padding: 8px 16px;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .coin-chip:hover {
            background: rgba(255,255,255,0.1);
            color: #fff;
        }

        /* Active State (Glows with the coin color) */
        .coin-chip.active {
            background: var(--chip-color);
            border-color: var(--chip-color);
            color: #000; /* Contrast text */
            font-weight: bold;
            box-shadow: 0 0 15px var(--chip-color);
        }

        .coin-chip .symbol {
            font-size: 1.2rem;
        }

    /* 4. Stat Cards */
    .stat-card {
        background: rgba(30, 30, 30, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 15px 20px;
    }

    /* 5. Custom Scrollbar */
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 10px;
    }

    /* 6. Pulsing Dot Animation */
    .pulsing-dot {
        display: inline-block;
        width: 6px;
        height: 6px;
        background-color: #198754;
        border-radius: 50%;
        margin-right: 6px;
        margin-bottom: 2px;
        animation: pulse 1.5s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.4;
        }

        100% {
            opacity: 1;
        }
    }

    /* ApexCharts Overrides */
    .apexcharts-tooltip {
        background: #000 !important;
        border: 1px solid #333 !important;
        color: #fff;
    }

    .apexcharts-tooltip-title {
        background: #111 !important;
        border-bottom: 1px solid #333 !important;
    }

    /* Loading Overlay that sits ON TOP of the chart */
    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7); /* Semi-transparent black */
        backdrop-filter: blur(4px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 10;
        border-radius: 16px;
    }

    .text-gold {
        color: #F7931A !important;
    }
</style>

@code {
    private List<Trade> trades = new();
    private ApexChartOptions<Trade> options = new();
    private ApexChart<Trade>? chart;
    private Timer? _timer;
    private string selectedSymbol = "BTC-USD";
    private CultureInfo usCulture = CultureInfo.CreateSpecificCulture("en-US");

    // Dictionary for cleaner UI generation
    private Dictionary<string, string> CoinList = new() {
        { "BTC-USD", "₿" },
        { "ETH-USD", "Ξ" },
        { "SOL-USD", "◎" },
        { "XRP-USD", "✕" },
        { "DOGE-USD", "Ð" }
    };

    private string GetColor(string s) => s switch
    {
        "BTC-USD" => "#F7931A", // Bitcoin Orange
        "ETH-USD" => "#627EEA", // Ethereum Blue
        "SOL-USD" => "#14F195", // Solana Green
        "XRP-USD" => "#FFFFFF", // Ripple White
        "DOGE-USD" => "#C2A633", // Doge Gold
        _ => "#888"
    };

    protected override async Task OnInitializedAsync()
    {
        ConfigureChart();
        await LoadData();
        _timer = new Timer(async _ => await InvokeAsync(async () => { await LoadData(); StateHasChanged(); }), null, 2000, 2000);
    }

    private void ConfigureChart()
    {
        var color = GetColor(selectedSymbol);
        options.Theme = new Theme { Mode = Mode.Dark };
        options.Chart = new Chart { Toolbar = new Toolbar { Show = false }, Background = "transparent", Animations = new Animations { Enabled = false } };
        options.Stroke = new Stroke { Curve = Curve.MonotoneCubic, Width = 2, Colors = new List<string> { color } };

        options.Fill = new Fill
        {
            Type = new List<FillType> { FillType.Gradient },
            Gradient = new FillGradient
            {
                Shade = GradientShade.Dark,
                Type = GradientType.Vertical,
                ShadeIntensity = 0.5,
                OpacityFrom = 0.5,
                OpacityTo = 0.05,
                Stops = new List<double> { 0, 100 }
            }
        };

        options.Xaxis = new XAxis { Labels = new XAxisLabels { Style = new AxisLabelStyle { Colors = "#444" } }, AxisBorder = new AxisBorder { Show = false }, AxisTicks = new AxisTicks { Show = false } };

        options.Yaxis = new List<YAxis> {
            new YAxis {
                Opposite = true,
                Labels = new YAxisLabels {
                    Style = new AxisLabelStyle { Colors = color },
                    // The "Safe" Formatter
                    Formatter = @"function (value) { 
                        if (value === undefined || value === null) { return ''; }
                        return '$' + value.toLocaleString(); 
                    }" 
                }
            }
        };
        // -----------------------

        options.Grid = new Grid { BorderColor = "#222", StrokeDashArray = 3 };
    }

    private async Task SelectCoin(string symbol)
    {
        if (selectedSymbol == symbol) return;
        selectedSymbol = symbol;

        trades.Clear();
        ConfigureChart();

        // Force render so @ref and DOM update before calling UpdateOptionsAsync
        await InvokeAsync(StateHasChanged);

        if (chart != null)
        {
            await chart.UpdateOptionsAsync(true, true, false);
        }

        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var newTrades = await Api.GetTradesAsync(selectedSymbol);

            // 1. SAFETY CHECK: If API returns null, stop immediately
            if (newTrades == null)
            {
                return;
            }

            // 2. Now it is safe to sort
            trades = newTrades.OrderBy(t => t.Timestamp).ToList();

            // 3. Update Chart (Check for null chart too)
            if (chart != null)
            {
                await chart.UpdateSeriesAsync(true);
            }
        }
        catch (Exception ex)
        {
            // Log error to browser console so you can see it
            Console.WriteLine($"LoadData Error: {ex.Message}");
        }
    }

    private string FormatCurrency(decimal price) => price.ToString(price < 10 ? "C4" : "C2", usCulture);
    public void Dispose() => _timer?.Dispose();
}